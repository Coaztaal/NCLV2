+:root {
+  --primary: #00AEEF;
+  --secondary: #2C2E83;
+  --tertiary: #FF007F;
+  --accent: #A66DD8;
+  --highlight: #FF3CAC;
+
+  --bg-dark: #0D0D0D;
+  --bg-light: #1C1B2F;
+
+  --text-primary: #FFFFFF;
+  --text-secondary: #D1C4E9;
+}
+
+body {
+  background-color: var(--bg-dark);
+  color: var(--text-primary);
+  font-family: 'Helvetica Neue', sans-serif;
+}
+
+.cyberpunk-btn {
+  background: var(--primary);
+  color: var(--text-primary);
+  padding: 1rem 2rem;
+  text-transform: uppercase;
+  border: none;
+  border-radius: 6px;
+  cursor: pointer;
+  font-weight: bold;
+  box-shadow: 0 0 10px var(--primary), 0 0 20px var(--tertiary);
+  transition: all 0.3s ease-in-out;
+}
+
+.cyberpunk-btn:hover {
+  background: var(--highlight);
+  box-shadow: 0 0 20px var(--highlight), 0 0 40px var(--accent);
+}
+
+.cyberpunk-hero {
+  background: linear-gradient(135deg, var(--secondary), var(--tertiary));
+  padding: 80px 20px;
+  text-align: center;
+  color: var(--text-primary);
+}
+
+.cyberpunk-hero h1 {
+  font-size: 3rem;
+  margin-bottom: 1rem;
+}
+
+.cyberpunk-hero p {
+  font-size: 1.25rem;
+  color: var(--text-secondary);
+}
+
+.featured-products {
+  display: grid;
+  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
+  gap: 2rem;
+  padding: 60px 20px;
+  background-color: var(--bg-light);
+}
+
+.product-card {
+  background: #141322;
+  padding: 20px;
+  border-radius: 10px;
+  box-shadow: 0 0 10px #ff3cac44;
+  text-align: center;
+  transition: transform 0.3s ease;
+}
+
+.product-card:hover {
+  transform: scale(1.05);
+  box-shadow: 0 0 20px #ff3cac99;
+}
+
+.product-card h3 {
+  color: var(--highlight);
+}
+
+.product-card p {
+  color: var(--text-secondary);
+}
